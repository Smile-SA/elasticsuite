<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <smile_elasticsuite_tracker>
            <general>
                <enabled>1</enabled>
                <retention_delay>12</retention_delay>
                <use_api>0</use_api>
                <is_headless_mode>0</is_headless_mode>
            </general>
            <session>
                <visit_cookie_name>STUID</visit_cookie_name>
                <visit_cookie_lifetime>3600</visit_cookie_lifetime>
                <visitor_cookie_lifetime>365</visitor_cookie_lifetime>
                <visitor_cookie_name>STVID</visitor_cookie_name>
            </session>
            <anonymization>
                <enabled>0</enabled>
                <delay>365</delay>
            </anonymization>
            <queue_cleanup>
                <delay>7</delay>
            </queue_cleanup>
        </smile_elasticsuite_tracker>
        <smile_elasticsuite_telemetry>
            <telemetry>
                <enabled>0</enabled>
                <url>https://t.elasticsuite.io/track</url>
            </telemetry>
        </smile_elasticsuite_telemetry>
    </default>
</config>

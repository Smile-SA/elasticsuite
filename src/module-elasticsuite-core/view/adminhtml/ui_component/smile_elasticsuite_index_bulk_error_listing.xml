<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">smile_elasticsuite_index_bulk_error_listing.smile_elasticsuite_index_bulk_error_listing_data_source</item>
            <item name="deps" xsi:type="string">smile_elasticsuite_index_bulk_error_listing.smile_elasticsuite_index_bulk_error_listing_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">smile_elasticsuite_index_bulk_error_columns</item>
    </argument>
    <dataSource name="smile_elasticsuite_index_bulk_error_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Smile\ElasticsuiteCore\Ui\Component\DataProvider\BulkErrorDataProvider</argument>
            <argument name="name" xsi:type="string">smile_elasticsuite_index_bulk_error_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">entity_id</argument>
            <argument name="collectionFactory" xsi:type="object">Smile\ElasticsuiteCore\Model\ResourceModel\Index\BulkError\CollectionFactory</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">entity_id</item>
                    </item>
                </item>
            </argument>
        </argument>
    </dataSource>
    <listingToolbar name="listing_top">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="sticky" xsi:type="boolean">true</item>
            </item>
        </argument>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="templates" xsi:type="array">
                        <item name="filters" xsi:type="array">
                            <item name="select" xsi:type="array">
                                <item name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</item>
                                <item name="template" xsi:type="string">ui/grid/filters/elements/ui-select</item>
                            </item>
                        </item>
                    </item>
                </item>
                <item name="observers" xsi:type="array">
                    <item name="column" xsi:type="string">column</item>
                </item>
            </argument>
            <filterSelect name="store_id">
                <argument name="optionsProvider" xsi:type="configurableObject">
                    <argument name="class" xsi:type="string">Magento\Store\Ui\Component\Listing\Column\Store\Options</argument>
                </argument>
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="provider" xsi:type="string">${ $.parentName }</item>
                        <item name="dataScope" xsi:type="string">store_id</item>
                        <item name="caption" xsi:type="string" translate="true">All Store Views</item>
                        <item name="label" xsi:type="string" translate="true">Store View</item>
                    </item>
                </argument>
            </filterSelect>
        </filters>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="smile_elasticsuite_index_bulk_error_columns">
        <column name="entity_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="store_code">
            <settings>
                <label translate="true">Store Code</label>
                <filter>text</filter>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="index_identifier">
            <settings>
                <label translate="true">Index Identifier</label>
                <filter>text</filter>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="error_type">
            <settings>
                <filter>text</filter>
                <label translate="true">Error Type</label>
            </settings>
        </column>
        <column name="reason">
            <settings>
                <filter>text</filter>
                <label translate="true">Reason</label>
            </settings>
        </column>
        <column name="sample_ids">
            <settings>
                <filter>text</filter>
                <label translate="true">Failed doc IDs sample</label>
            </settings>
        </column>
        <column name="count">
            <settings>
                <filter>numberRange</filter>
                <label translate="true">Count</label>
            </settings>
        </column>
        <column name="created_at">
            <settings>
                <filter>dateRange</filter>
                <label translate="true">Created At</label>
            </settings>
        </column>
        <column name="updated_at">
            <settings>
                <filter>dateRange</filter>
                <label translate="true">Updated At</label>
            </settings>
        </column>
    </columns>
</listing>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Magento_Catalog::config_smile_elasticsuite_core_base_settings" title="ElasticSuite Base Settings" />
                            <resource id="Magento_Backend::smile_elasticsuite_autocomplete" title="ElasticSuite Autocomplete" />
                        </resource>
                    </resource>
                </resource>
                <resource id="Smile_ElasticsuiteCore::menu" title="ElasticSuite">
                    <resource id="Smile_ElasticsuiteCore::manage_search" title="Search Engine configuration">
                        <resource id="Smile_ElasticsuiteCore::manage_relevance" title="Search Relevance" />
                    </resource>
                    <resource id="Smile_ElasticsuiteCore::system" title="System">
                        <resource id="Smile_ElasticsuiteCore::healthcheck" title="Healthcheck" />
                        <resource id="Smile_ElasticsuiteCore::index_bulk_error" title="Indexing / Bulk Errors" />
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>

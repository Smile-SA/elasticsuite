<logging xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Logging:etc/logging.xsd">
    <groups>
        <group name="elasticsuite_optimizer">
            <label translate="true">Manage Elasticsuite Search Optimizers</label>
            <expected_models>
                <expected_model class="Smile\ElasticsuiteCatalogOptimizer\Model\Optimizer" />
            </expected_models>
            <events>
                <event controller_action="smile_elasticsuite_catalog_optimizer_optimizer_edit" action_alias="view" />
                <event controller_action="smile_elasticsuite_catalog_optimizer_optimizer_delete" action_alias="delete" />
                <event controller_action="smile_elasticsuite_catalog_optimizer_optimizer_duplicate" action_alias="duplicate" />
                <event controller_action="smile_elasticsuite_catalog_optimizer_optimizer_save" action_alias="save" />
            </events>
        </group>
    </groups>
</logging>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <fieldset name="display_settings">
        <field name="is_anchor">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="formElement" xsi:type="string">hidden</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
        </field>

        <dynamicRows
                name="layered_navigation_filters"
                component="Smile_ElasticsuiteCatalog/js/form/element/filterable-attributes"
                template="Smile_ElasticsuiteCatalog/form/element/filterable-attributes"
                sortOrder="200">
            <settings>
                <addButton>false</addButton>
                <pageSize>100</pageSize>
                <additionalClasses>
                    <class name="smile-elasticsuite-filterable-attributes">true</class>
                </additionalClasses>
                <scopeLabel>[GLOBAL]</scopeLabel>
                <componentType>dynamicRows</componentType>
                <label translate="true">Layered Navigation Filters</label>
            </settings>
            <container name="record" component="Magento_Ui/js/dynamic-rows/record">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="isTemplate" xsi:type="boolean">true</item>
                        <item name="is_collection" xsi:type="boolean">true</item>
                        <item name="componentType" xsi:type="string">container</item>
                        <item name="positionProvider" xsi:type="string">position</item>
                    </item>
                </argument>
                <field name="attribute_label" formElement="input" template="ui/form/element/text">
                    <settings>
                        <dataType>text</dataType>
                        <label translate="true">Attribute</label>
                        <visible>true</visible>
                        <dataScope>attribute_label</dataScope>
                    </settings>
                </field>
                <field name="display_mode" component="Magento_Ui/js/form/element/select" formElement="select">
                    <settings>
                        <dataType>text</dataType>
                        <label translate="true">Display Mode</label>
                        <dataScope>display_mode</dataScope>
                    </settings>
                    <formElements>
                        <select>
                            <settings>
                                <options class="Smile\ElasticsuiteCatalog\Model\Category\FilterableAttribute\Source\DisplayMode"/>
                            </settings>
                        </select>
                    </formElements>
                </field>
                <field name="product_match" formElement="input" template="ui/form/element/text">
                    <settings>
                        <dataType>text</dataType>
                        <label translate="true">Products</label>
                        <visible>true</visible>
                        <dataScope>product_match</dataScope>
                    </settings>
                </field>
                <field name="position" component="Magento_Catalog/js/form/element/input" formElement="input">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="prefixName" xsi:type="string">layered_navigation_filters_order</item>
                        </item>
                    </argument>
                    <settings>
                        <additionalClasses>
                            <class name="_hidden">true</class>
                        </additionalClasses>
                        <dataType>text</dataType>
                        <visible>false</visible>
                        <dataScope>position</dataScope>
                    </settings>
                </field>
                <field name="relevant" component="Magento_Catalog/js/form/element/input" formElement="input">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="prefixName" xsi:type="string">layered_navigation_filters_order</item>
                        </item>
                    </argument>
                    <settings>
                        <additionalClasses>
                            <class name="_hidden">true</class>
                        </additionalClasses>
                        <dataType>text</dataType>
                        <visible>false</visible>
                        <dataScope>relevant</dataScope>
                    </settings>
                </field>
            </container>
        </dynamicRows>
    </fieldset>

    <fieldset name="general">
        <field name="use_name_in_product_search">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">100</item>
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="source" xsi:type="string">category</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="label" xsi:type="string" translate="true">Use Category Name in product search</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                    </item>
                    <item name="default" xsi:type="string">1</item>
                </item>
            </argument>
        </field>
    </fieldset>

</form>
